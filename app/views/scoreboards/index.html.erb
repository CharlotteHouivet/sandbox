<p id="notice"><%= notice %></p>

<h1>Listing Scoreboards</h1>

<table>
  <thead>
    <tr>
      <th>Name of activity</th>
      <th>Name of scoreboard</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scoreboards.each do |scoreboard| %>
      <tr>
        <td><%= scoreboard.name_of_activity %></td>
        <td><%= scoreboard.name_of_scoreboard %></td>
        <td><%= scoreboard.user %></td>
        <td><%= link_to 'Show', scoreboard %></td>
        <td><%= link_to 'Edit', edit_scoreboard_path(scoreboard) %></td>
        <td><%= link_to 'Destroy', scoreboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

